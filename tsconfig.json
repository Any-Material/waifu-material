{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"jsx": "react",
		"paths": {
			"@/*": [
				"./source/*"
			]
		},
		"strict": true,
		"allowJs": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"files": [
		"source/typings/merge.ts",
		"source/typings/window.ts"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.json"
	],
	"exclude": [
		"/node_modules",
		"/package-lock.json",
		"/debugs",
		"/bundles",
		"/downloads",
		"/config.json",
		"/build",
		"/releases"
	]
}
